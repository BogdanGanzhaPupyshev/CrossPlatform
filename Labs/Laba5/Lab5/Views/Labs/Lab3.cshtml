@model Lab5.Models.Lab3Model;

@{
	ViewData["Title"] = "Lab3";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="Lab3">
	<div class="form-group">
		<label for="lab1inputtext">Input file path</label>
		<input type="text" class="form-control" id="lab1inputtext" asp-for="InputFile" />
	</div>
	<div class="form-group">
		<label for="lab1outputtext">Output file path</label>
		<input type="text" class="form-control" id="lab1outputtext" asp-for="OutputFile" />
	</div>
	<button type="submit" class="btn btn-primary mt-3">Sumbit</button>
</form>

@if (Model != null && !string.IsNullOrWhiteSpace(Model.Result))
{
	<div class="row">
		<label for="lab3result">Result</label>
		<input type="text" id="lab3result" value="@Model.Result">
	</div>
}